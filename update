# try clone
cd /home/pi/devl
git clone https://github.com/mbirum/python-midi

# if cloned
if [ -d "./python-midi" ]
then
    # stop
    /home/pi/devl/midi/stop

    # copy clone into /midi
    rm -rf midi
    cp -r python-midi ./midi
    rm -rf python-midi

    # re-run
    /home/pi/devl/midi/run
    cd -
    clear
fi